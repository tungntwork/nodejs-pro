<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Hỏi Dân IT - Dự án laptopshop" />
    <meta name="author" content="Hỏi Dân IT" />
    <title>Detail User - Thanh Tùng</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $(document).ready(() => {
            const avatarFile = $("#avatarFile");
            avatarFile.change(function (e) {
                const imgURL = URL.createObjectURL(e.target.files[0]);
                $("#avatarPreview").attr("src", imgURL);
                $("#avatarPreview").css({ "display": "block" });
            });
        });
    </script>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header') -%>

        <div id="layoutSidenav">
            <%- include('../layout/sidenav') -%>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Manage Users</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item active"><a href="/admin/user">User</a></li>
                            </ol>
                            <div class="row">
                                <div class="col-6 mx-auto">
                                    <div style="width: 600px; margin: auto;">
                                        <h5 style="padding: 10px 0px;">View detail a user</h5>
                                        <form action="/admin/update-user" method="post" enctype="multipart/form-data">
                                            <input type="text" class="form-control" placeholder=""
                                                value="<%= user.id %>" name="id" style="display: none;">
                                            <div class="mb-3">
                                                <label class="form-label">Full name:</label>
                                                <input value="<%= user.fullName %>" name="fullName" type="text"
                                                    class="form-control" id="exampleFormControlInput1"
                                                    placeholder="your name">
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Email:</label>
                                                <input disabled value="<%= user.username %>" name="username"
                                                    type="email" class="form-control" id="exampleFormControlInput1"
                                                    placeholder="name@example.com">
                                            </div>
                                            <div class="row">
                                                <div class="mb-3 col-6">
                                                    <label class="form-label">Phone</label>
                                                    <input value="<%= user.phone %>" type="text" class="form-control"
                                                        name="phone">
                                                </div>
                                                <!-- role -->
                                                <div class="mb-3 col-6">
                                                    <label class="form-label">Role</label>
                                                    <select name="role" class="form-select">
                                                        <% roles.forEach((role,index)=> { %>
                                                            <option value="<%-role.id %>" <%=role.id===user.roleId
                                                                ? 'selected' : '' %>
                                                                >
                                                                <%- role.name %>
                                                            </option>
                                                            <%})%>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="formFile" class="form-label">Avatar:</label>
                                                <input name="avatar" class="form-control" type="file" id="avatarFile"
                                                    accept=".png, .jpg, .jpeg">
                                            </div>

                                            <% if (user.avatar) { %>
                                                <img style="max-height: 250px; display: block;" alt="avatar preview"
                                                    id="avatarPreview" src="/images/<%=user.avatar%>" />
                                                <% } else { %>
                                                    <img style="max-height: 250px; display: none;" alt="avatar preview"
                                                        id="avatarPreview" />
                                                    <% } %>
                                                        <div class="mb-3">
                                                            <label class="form-label">Address:</label>
                                                            <textarea name="address" class="form-control" rows="2">
                                                    <%= user.address %>
                                                </textarea>
                                                        </div>
                                                        <div class="mb-3">
                                                            <button type="submit"
                                                                class="btn btn-warning">Submit</button>
                                                        </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
                    <%- include('../layout/footer') -%>
                </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="/admin/js/scripts.js"></script>
</body>

</html>